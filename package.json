{
  "name": "@phnq/service",
  "version": "1.2.2",
  "description": "Utilities for building microservices systems.",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgostovic/service.git"
  },
  "scripts": {
    "dist": "tsc --skipLibCheck",
    "postdist": "ts-node scripts/postdist",
    "clean": "rimraf dist",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:log": "PHNQ_MESSAGE_LOG_NATS=1 npm t",
    "pretest": "if [ \"$CCI\" != \"1\" ]; then docker run -d --name nats_phnq_service_test -p 4224:4222 nats; fi",
    "posttest": "if [ \"$CCI\" != \"1\" ]; then docker stop nats_phnq_service_test; docker rm nats_phnq_service_test; fi",
    "lint": "tsc --noEmit --skipLibCheck && eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "release:patch": "npm run clean; npm version patch; npm run dist; cd dist; npm publish",
    "release:minor": "npm run clean; npm version minor; npm run dist; cd dist; npm publish"
  },
  "engines": {
    "node": ">=14"
  },
  "author": "Patrick Gostovic",
  "license": "ISC",
  "dependencies": {
    "@phnq/log": "^1.1.4",
    "@phnq/message": "^1.13.5",
    "@types/validator": "^13.1.4",
    "crypto-random-string": "^3.3.1",
    "md5": "^2.3.0",
    "nats": "^2.9.1",
    "uuid": "^9.0.0",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/md5": "^2.3.2",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^26.6.3",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.9.1",
    "typescript": "^4.3.2"
  }
}
